  "repository": {
    "type": "git",
    "url": "git+https://github.com/egorkurito/apple-mail-mcp.git"
  },
  "homepage": "https://github.com/egorkurito/apple-mail-mcp#readme",
  "bugs": {
    "url": "https://github.com/egorkurito/apple-mail-mcp/issues"
  },
  "author": "egorkurito",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "execa": "^9.5.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "typescript": "^5.7.3"
  }
