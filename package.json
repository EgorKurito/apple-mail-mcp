{
  "name": "@egorkurito/apple-mail-mcp",
  "version": "1.0.0",
  "description": "MCP server for Apple Mail via NSAppleScript",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "apple-mail-mcp": "build/index.js"
  },
  "files": [
    "build/",
    "swift/Sources/",
    "swift/Package.swift",
    "swift/Package.resolved",
    "swift/mail-bridge.entitlements",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
